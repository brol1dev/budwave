<h1>New Weight Entry</h1>

<%= form_with model: @user_weight, url: weights_path do |form| %>
  <div>
    <%= form.label :weight_kg %>
    <%= form.number_field :weight_kg, step: 0.01 %>
  </div>

  <div>  
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <%= form.submit "Save" %>
<% end %> 